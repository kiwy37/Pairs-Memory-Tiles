<Window x:Class="Pairs_Bajan_Ramona.FileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pairs_Bajan_Ramona"
        mc:Ignorable="d"
        Title="FileWindow" Height="450" Width="800">
    <Grid>
        <Button Content="New Game" HorizontalAlignment="Left" Margin="325,24,0,0" VerticalAlignment="Top" Height="55" Width="170" Click="NewGameButton"/>
        <Button Content="Open Game" HorizontalAlignment="Left" Margin="325,99,0,0" VerticalAlignment="Top" Height="55" Width="170" Click="OpenGameButton"/>
        <Button x:Name="saves" Content="Save Game" HorizontalAlignment="Left" Margin="325,174,0,0" VerticalAlignment="Top" Height="55" Width="170" Click="SaveGameButton"/>
        <Button Content="Statistics" HorizontalAlignment="Left" Margin="325,249,0,0" VerticalAlignment="Top" Height="55" Width="170" Click="StatisticsButton"/>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="325,324,0,0" VerticalAlignment="Top" Height="55" Width="170" Click="ExitButton"/>

    </Grid>
</Window>
