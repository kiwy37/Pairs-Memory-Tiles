<Window x:Class="Pairs_Bajan_Ramona.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pairs_Bajan_Ramona"
        mc:Ignorable="d"
        Title="Statistics" Height="450" Width="595">
    <Grid>
        <ListView x:Name="UsersListView" FontSize="18" 
                  HorizontalContentAlignment="Stretch" Margin="-10,0,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"
                                    Width="200" />
                    <GridViewColumn Header="Games Played" DisplayMemberBinding="{Binding GamesPlayed}" 
                                    Width="200" />
                    <GridViewColumn Header="Wins" DisplayMemberBinding="{Binding Wins}" 
                                    Width="200" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
